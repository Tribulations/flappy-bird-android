<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/potrait_background">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorYellow"
        android:text="FLAPPY BIRD"
        android:textSize="40sp"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/fonta"
        android:id="@+id/txtTitle"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bird1"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/txtTitle"
        android:layout_marginTop="50dp"/>

    <ImageButton
        android:id="@+id/btnPlay"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:layout_centerInParent="true"
        android:background="@drawable/playbuttons"/>

    <Button
        android:id="@+id/btnRate"
        android:layout_width="167dp"
        android:layout_height="65dp"
        android:layout_below="@id/btnPlay"
        android:background="@drawable/btn_gradient_style"
        android:text="RATE"
        android:textSize="50sp"
        android:fontFamily="@font/fonta"
        android:textColor="@color/colorBlack"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:onClick="startGame"/>


    <Button
        android:id="@+id/btnExit"
        android:layout_width="167dp"
        android:layout_height="65dp"
        android:layout_below="@id/btnRate"
        android:text="EXIT"
        android:textSize="50sp"
        android:fontFamily="@font/fonta"
        android:textColor="@color/colorRed"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp" />


</RelativeLayout>